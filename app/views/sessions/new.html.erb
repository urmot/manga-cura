<h1 class="text-center">Log in</h1>

<div class="form-horizontal" role="form">

<%= form_for(:session, url: login_path) do |f| %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :email, :class => "form-control", placeholder: 'メールアドレス'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= f.submit "Log in", :class => "btn btn-default" %>
    </div>
  </div>

<% end %>

<div class="col-sm-offset-3">
  New user?
  <%= link_to "Sign up now!", signup_path %>
</div>

</div>
