<div class="container">

  <!-- navbar -->
  <div class="row">
    <nav class="navbar navbar-default navbar-fixed-top">

      <div class="navbar-header">
        <%= link_to 'Top', top_path, class:'navbar-brand' %>
      </div>

      <ul class="nav navbar-nav">
        <li><%= link_to '本棚', user_path, class:'active' %></li>
      </ul>

    </nav>
  </div>

<!-- <center><h1>本棚</h1></center> -->

  <!-- content -->
  <div class="row" style="padding:80px 0 0 0">
    <!-- side -->
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <center><i class="glyphicon glyphicon-user"></i>My page</center>
        </div>
        <div class="panel-body">
            <ul class="nav nav-pills nav-stacked">
              <li><p>&emsp;  ID　　　　　：<%= @user.id %></p></li>
              <li><p>&emsp;  アカウント名：<%= @user.name %></p></li>
              <li><p>&emsp;  お気に入り数：</p></li>
              <li><p>&emsp;  登録作者数　：</p></li>

            </ul>
        </div>
        <div class="panel-footer">
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to '設定', setting_path, class:'glyphicon glyphicon-cog' %></li>
            <li><%= link_to '退会', user_path, class:'glyphicon glyphicon-exclamation-sign',
                            method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </div>
    </div><!-- end side -->

    <!-- main -->
    <div class="col-md-9">
      <div class="page-header" style="margin-top:-30px;padding-bottom:0px;">
        <h1><small>お気に入り</small></h1>
      </div>

      <div class="row">

      <!-- この単位を繰り返す -->
      <% @user.comics.each_with_index do |comic, i| %>
      <div class="col-md-4">
        <div class="thumbnail" style="text-align:center;padding-top:10px;">
          <!-- データベースからのurlの受け取り方がわからない -->
          <img src="<%= comic.image_url%>"　class="img-responsive img-rounded">
          <div class="caption">
              <p><b><%= link_to comic.title,comic_path(comic) %></b></p>
              <p><%= comic.description %></p>
              <p style="margin-bottom:0px"><%= link_to "お気に入りから削除",destroy_favorite_path(@favorites[i][:id]),
                                                          class: 'btn btn-default',method: :delete %></p>
          </div>
        </div>
      </div>
      <% end %>
      <!-- ここまで -->
      <!-- 繰り返し -->

      <nav>
        <center>
        <ul class="pagination">
          <li>
            <a href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li>
            <a href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </center>
      </nav>

      </div>
    </div><!-- end main -->
  </div>
</div>
