<center><h1>本棚</h1></center>

<table border = "3">
  <td>
    <p>ID　　　　　：<%= @user.id %></p>
    <p>アカウント名：<%= @user.name %><br></p>
    <p>お気に入り数：</p>
    <p>登録作者数　：</p>
    <p><%= link_to '設定', setting_path %></p>
    <p><%= link_to '退会', user_path,
                    method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </td>
<table>

<table>
<% @comics.each do |comic| %>
  <tr>
    <th>タイトル</th>
    <th>著者</th>
    <th colspan="3"></th>
  </tr>

  <tr>
    <td><%= comic.title %></td>
    <td><%= comic.description %></td>
    <td><%= link_to 'Show', comic_path(comic.id) %></td>
  </tr>
<% end %>
</table>
