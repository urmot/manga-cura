</div>
<link rel="stylesheet" href="bootstrap.min.css" />
<link rel="stylesheet" href="stickey-footer.css" />

<div class="jumbotron">
  <h3>おすすめ作品</h3>
  <div class="row">

    <% @comics.each do |comic| %>
      <div style="width: 95%; height: 400px; overflow-y: scroll; margin: 0 auto;">
        <div class="col-sm-5 col-md-3">
          <div class="thumbnail">
            <img src="<%= comic.image_url %>" alt="o_p_goldfilm" height="150" width="141">
            <div class="caption">
              <p><h3><%= link_to comic.title, comic_path(comic) %></h3></p>
              <p><%= comic.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


